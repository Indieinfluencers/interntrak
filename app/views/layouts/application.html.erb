<!DOCTYPE html>
<html>
  <head>
    <title>Interntrak</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div id="navigation">
        <div id="logo-home-link" class="image-link-buttons">
          <%= link_to image_tag("train-track.png", alt: "interntrak-logo"), root_path %>
        </div>
        <div id="user-img-link" class="image-link-buttons">
          <%= link_to image_tag("temp-user-img.png", alt: "user-img"), edit_user_registration_path %>
          <h4 class="user-name">First Last</h4>
        </div>
        <div id="feature-links">
          <div class="feature-link"><%= link_to 'Schedule', '' %></div>
          <div class="feature-link"><%= link_to 'Notes', '' %></div>
          <div class="feature-link"><%= link_to 'Pairing', '' %></div>
          <div class="feature-link"><%= link_to 'Stories', '' %></div>
          <div class="feature-link"><%= link_to 'Assessment', '' %></div>
          <div class="feature-link"><%= link_to 'Resources', '' %></div>
        </div>
      </div>
      <div id="right-column">
        <div id="login">
          <% if user_signed_in? %>
            <%= link_to image_tag("settings-icon.png", alt: "settings-icon") %>
            <%= link_to('Sign out', sign_out_path, class: "btn btn__link", :method => :delete) %>
          <% end %>
        </div>
        <div id="content">
          <h3 id="welcome-name">Welcome, First Last.</h3>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
